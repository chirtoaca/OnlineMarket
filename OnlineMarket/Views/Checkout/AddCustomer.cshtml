@model OnlineMarket.DataModels.Models.Customer
@{
    ViewBag.Title = "AddCustomer";
}

@using (Html.BeginForm("AddCustomer", "Checkout", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{


    <div class="form-group">
        @Html.LabelFor(x => x.FirstName, new { @class = "col-md-2 control-label" })

        <div class="col-md-10">
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.LastName, new { @class = "col-md-2 control-label" })

        <div class="col-md-10">
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.District, new { @class = "col-md-2 control-label" })

        <div class="col-md-10">
            @Html.TextBoxFor(x => x.District, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.City, new { @class = "col-md-2 control-label" })

        <div class="col-md-10">
            @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Adress, new { @class = "col-md-2 control-label" })

        <div class="col-md-10">
            @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.PhoneNumber, new { @class = "col-md-2 control-label" })

        <div class="col-md-10">
            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Zip, new { @class = "col-md-2 control-label" })

        <div class="col-md-10">
            @Html.TextBoxFor(x => x.Zip, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Continue" />
        </div>
    </div>
}