@model IEnumerable<string>
@Html.ActionLink("Home", "Index", "Products", null,
 new { @class = "btn btn-block btn-info btn-lg" })
@foreach (var link in Model)
{
    @Html.RouteLink(link, new {
    controller = "Products",
    action = "Index",
    category = link,
    page = 1
    }, new {
    @class = "btn btn-block btn-lg"
    + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
    + (link != ViewBag.SelectedCategory ? " btn-info" : "")
    })
}